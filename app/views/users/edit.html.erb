<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>User info</h2>
      <%= render 'layouts/errors', obj: @user %>

      <%= form_with model: @user, local: true do |f| %>
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %><br>
        <%= f.label :profile_image, "Image" %><br>
        <%= f.attachment_field :profile_image %><br>
        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction, class: 'form-control' %><br>
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      <% end %>

    </div>
  </div>
</div>